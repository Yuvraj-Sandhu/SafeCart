# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_STORAGE_BUCKET=your-storage-bucket

# Server Configuration
PORT=3001
NODE_ENV=development

# USDA API Configuration
USDA_API_BASE_URL=https://www.fsis.usda.gov/fsis/api/recall/v/1
API_REQUEST_TIMEOUT=30000

# Sync Configuration
SYNC_INTERVAL_HOURS=12
ENABLE_AUTO_SYNC=true
ENABLE_FDA_AUTO_SYNC=true
SYNC_TIMEZONE=America/New_York

# Authentication Configuration
JWT_SECRET=your-jwt-secret


# Google OAuth Configuration
# Get from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# Same Client ID as frontend, but backend only needs the ID for verification
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
# Optional: Only needed if using OAuth2 flow directly (not needed for ID token verification)
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
# Used for enhancing recall titles with GPT-4o
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE